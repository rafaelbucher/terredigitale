// src/layouts/MinimalLayout.astro
// Import direct du CSS - IMPORTANT pour le build
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "Mon Site Astro",
  description = "Description par d√©faut de mon site",
  image = "/favicon.svg",
  canonical 
} = Astro.props;

// Gestion s√©curis√©e de l'URL canonique
const getCanonicalURL = () => {
  if (canonical) {
    return canonical;
  }
  
  // Si Astro.site est configur√©, l'utiliser
  if (Astro.site) {
    return new URL(Astro.url.pathname, Astro.site).href;
  }
  
  // Fallback : utiliser l'URL de la requ√™te courante
  return Astro.url.href;
};

const canonicalURL = getCanonicalURL();
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url.origin)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url.origin)} />
    
    <!-- Pr√©chargement des polices critiques -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  
  <body>
    <!-- Contenu principal uniquement, sans header ni footer -->
    <main class="site-main">
      <slot />
    </main>
    
    <!-- Scripts optionnels -->
    <script>
      // Scripts globaux si n√©cessaire
      console.log('üé® Design System charg√© avec tokens');
    </script>
  </body>
</html>

<style>
  /* Styles sp√©cifiques au layout minimal */
  .site-main {
    min-height: 100vh; /* Prend toute la hauteur de l'√©cran */
    padding: var(--space-lg) 0;
  }
  
  /* Corps de page optimis√© pour le contenu pleine page */
  html, body {
    height: 100%;
  }
  
  body {
    display: flex;
    flex-direction: column;
  }
</style>