---
// BaseLayout.astro - MOBILE FIRST ONLY
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "Mon Site Astro",
  description = "Description par défaut de mon site",
  image = "/favicon.svg",
  canonical 
} = Astro.props;

const canonicalURL = canonical ? new URL(canonical, Astro.site) : new URL(Astro.url.pathname, Astro.site);
const pathname = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url.origin)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url.origin)} />
    
    <!-- Mobile optimizations -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="theme-color" content="#1E1E1E" />
    
    <!-- Préchargement des polices critiques -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  
  <body>
    <Header pathname={pathname} />
    
    <main class="site-main">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  /* ================================
   * LAYOUT MOBILE - STYLES GLOBAUX
   * ================================ */
  
  .site-main {
    flex: 1;
    padding: 0 var(--space-md);
    width: 100%;
  }

  /* Optimisations mobiles */
  body {
    background-color: var(--color-primary) !important;
    overflow-x: hidden; /* Éviter scroll horizontal */
    position: relative;
  }

  /* Éviter les zooms accidentels */
  html {
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
  }

  /* Smooth scroll pour navigation mobile */
  html {
    scroll-behavior: smooth;
  }

  /* Optimisation des tap highlights */
  * {
    -webkit-tap-highlight-color: transparent;
  }

  /* Focus visible amélioré pour mobile */
  :focus-visible {
    outline: 2px solid var(--color-highlight);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* ================================
   * RESPONSIVE - TRÈS PETITS ÉCRANS
   * ================================ */

  @media (max-width: 320px) {
    .site-main {
      padding: 0 var(--space-sm);
    }
  }

  /* Orientation paysage mobile */
  @media (orientation: landscape) and (max-height: 500px) {
    .site-main {
      padding: 0 var(--space-sm);
    }
  }
</style>