---
// src/layouts/BaseLayout.astro
import Logo from '../components/Logo.astro';
// Import direct du CSS - IMPORTANT pour le build
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "Mon Site Astro",
  description = "Description par d√©faut de mon site",
  image = "/favicon.svg",
  canonical 
} = Astro.props;

const canonicalURL = canonical ? new URL(canonical, Astro.site) : new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url.origin)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url.origin)} />
    
    <!-- Pr√©chargement des polices critiques -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  
  <body>
    <!-- Header avec logo -->
    <header class="site-header">
      <nav class="container">
        <div class="navbar">
          <Logo 
            href="/" 
            size="md" 
            variant="light" 
            interactive={true}
            class="navbar-logo"
          />
          
          <!-- Navigation sera ajout√©e ici -->
          <div class="navbar-nav">
            <a href="/" class="nav-link">Accueil</a>
            <a href="/design-system" class="nav-link">Design System</a>
          </div>
        </div>
      </nav>
    </header>
    
    <!-- Contenu principal -->
    <main class="site-main">
      <slot />
    </main>
    
    <!-- Footer avec logo -->
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <Logo 
              size="lg" 
              variant="light" 
              class="footer-logo"
            />
            <p class="footer-description">
              Terre Digitale - Solutions num√©riques innovantes
            </p>
          </div>
          
          <div class="footer-links">
            <div class="footer-section">
              <h4>Navigation</h4>
              <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/design-system">Design System</a></li>
              </ul>
            </div>
          </div>
        </div>
        
        <div class="footer-bottom">
          <p>&copy; 2024 Terre Digitale. Tous droits r√©serv√©s.</p>
        </div>
      </div>
    </footer>
    
    <!-- Scripts optionnels -->
    <script>
      console.log('üöÄ Site charg√© avec le syst√®me de design tokens');
    </script>
  </body>
</html>

<style>
  /* Styles sp√©cifiques au layout */
  .site-header {
    background-color: var(--color-primary-light);
    border-bottom: 1px solid var(--color-primary-lighter);
    position: sticky;
    top: 0;
    z-index: var(--z-navbar);
    padding: var(--space-md) 0;
  }
  
  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .navbar-nav {
    display: flex;
    gap: var(--space-lg);
    align-items: center;
  }
  
  .nav-link {
    color: var(--color-neutral-lighter);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
    transition: var(--transition-colors);
    padding: var(--space-sm) var(--space-md);
  }
  
  .nav-link:hover {
    color: var(--color-highlight);
  }
  
  .site-main {
    min-height: calc(100vh - 120px);
    padding: var(--space-lg) 0;
  }
  
  .site-footer {
    background-color: var(--color-primary-dark);
    color: var(--color-neutral-lighter);
    padding: var(--space-xl) 0 var(--space-lg);
    margin-top: auto;
    border-top: 1px solid var(--color-primary-lighter);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-xl);
    margin-bottom: var(--space-xl);
  }
  
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .footer-description {
    color: var(--color-neutral-dark);
    margin: 0;
    max-width: 300px;
  }
  
  .footer-links {
    display: flex;
    gap: var(--space-xl);
  }
  
  .footer-section h4 {
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-md);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section li {
    margin-bottom: var(--space-sm);
  }
  
  .footer-section a {
    color: var(--color-neutral-dark);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: var(--transition-colors);
  }
  
  .footer-section a:hover {
    color: var(--color-highlight);
  }
  
  .footer-bottom {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-primary-lighter);
    text-align: center;
  }
  
  .footer-bottom p {
    color: var(--color-neutral-dark);
    font-size: var(--font-size-sm);
    margin: 0;
  }
  
  /* Assurer que le body prend toute la hauteur */
  html, body {
    height: 100%;
  }
  
  body {
    display: flex;
    flex-direction: column;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .navbar {
      flex-direction: column;
      gap: var(--space-md);
      text-align: center;
    }
    
    .navbar-nav {
      flex-direction: column;
      gap: var(--space-sm);
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .footer-links {
      justify-content: center;
    }
  }
  
  @media (max-width: 640px) {
    .navbar-nav {
      gap: var(--space-xs);
    }
    
    .nav-link {
      padding: var(--space-xs) var(--space-sm);
      font-size: var(--font-size-sm);
    }
  }
</style>