---
// Footer.astro - MOBILE FIRST ONLY
import Icon from './Icon.astro';

export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<footer class={`site-footer ${className}`}>
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="footer-logo-container">
          <Icon size="xl" color="secondary" class="footer-logo" />
        </div>
      </div>
      <nav class="footer-nav" aria-label="Navigation du pied de page">
        <a href="/services" class="footer-link">Services</a>
        <a href="/ressources" class="footer-link">Ressources</a>
        <a href="/contact" class="footer-link">Contact</a>
        <a href="/design-system" class="footer-link">Design System</a>
      </nav>
    </div>
    <!-- Legal & Copyright -->
    <div class="footer-bottom">
      <a href="/privacy" class="footer-legal-link">Privacy & Legal</a>
      <p class="footer-copyright">© 2025 Terre Digitale</p>
    </div>
  </div>
</footer>

<style>
  /* ================================
   * FOOTER - MOBILE FIRST LAYOUT
   * ================================ */

  .site-footer {
    background-color: var(--color-primary);
    padding: var(--space-xl) var(--space-md) var(--space-lg);
    margin-top: auto;
    width: 100%;
    color: var(--color-neutral-lighter);
  }

  .footer-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    width: 100%;
    max-width: 100%;
  }

  .footer-content {
    display: flex;
    align-items: start;
    width: 100%;
    column-gap: 158px;
  }

  /* ================================
   * BRAND SECTION - LOGO SUNRISE
   * ================================ */

  .footer-brand {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .footer-logo-container {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .footer-logo-text {
    font-family: var(--font-family-primary);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: var(--logo-text-spacing);
    line-height: 1;
    color: var(--color-primary-lighter);
    font-size: var(--font-size-sm);
  }

  /* ================================
   * NAVIGATION LINKS - VERTICAL STACK
   * ================================ */

  .footer-nav {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .footer-link {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-regular);
    color: var(--color-neutral-darker);
    text-decoration: none;
    line-height: var(--line-height-loose);
    transition: var(--transition-colors);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    min-height: 36px !important;
  }

  .footer-link:first-child {
    margin-top: 18px;
  }

  .footer-link:active {
    color: var(--color-secondary);
  }

  /* ================================
   * LEGAL & COPYRIGHT - BOTTOM ROW
   * ================================ */

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    width: 100%;
    flex-wrap: wrap;
  }

  .footer-legal-link {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-regular);
    color: var(--color-primary-lighter) !important;
    text-decoration: none;
    transition: var(--transition-colors);
    min-height: 44px;
    display: flex;
    align-items: center;
  }

  .footer-legal-link:active {
    color: var(--color-secondary);
  }

  .footer-copyright {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-regular);
    color: var(--color-primary-lighter);
    margin: 0;
    text-align: right;
    flex-shrink: 0;
  }

  .site-footer a {
    color: var(--color-neutral-darker);
  }

  .site-footer a:hover {
    color: var(--color-secondary) !important;
    transition: color 0.3s ease;
  }

  /* ================================
   * TRÈS PETITS ÉCRANS (320px)
   * ================================ */

  @media (max-width: 320px) {
    .site-footer {
      padding: var(--space-lg) var(--space-sm) var(--space-md);
    }

    .footer-container {
      gap: var(--space-lg);
    }

    .footer-nav {
      gap: var(--space-sm);
    }

    .footer-link {
      font-size: var(--font-size-sm);
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }

    .footer-copyright {
      text-align: left;
      width: 100%;
    }

    .footer-logo-text {
      font-size: var(--font-size-xs);
    }
  }

  /* ================================
   * VIEWPORT COURT (hauteur réduite)
   * ================================ */

  @media (max-height: 600px) {
    .site-footer {
      padding: var(--space-md) var(--space-md) var(--space-sm);
    }

    .footer-container {
      gap: var(--space-md);
    }

    .footer-nav {
      gap: var(--space-sm);
    }
  }

  /* ================================
   * OPTIMISATIONS TACTILES
   * ================================ */

  .footer-link,
  .footer-legal-link {
    -webkit-tap-highlight-color: transparent;
    cursor: pointer;
  }

  /* État de focus pour l'accessibilité */
  .footer-link:focus-visible,
  .footer-legal-link:focus-visible {
    outline: 2px solid var(--color-highlight);
    outline-offset: 2px;
    border-radius: 2px;
  }
</style>