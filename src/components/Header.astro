---
// filepath: /Users/admin/Desktop/terredigitale/src/components/Header.astro
import Icon from './Icon.astro';

const { pathname = "/" } = Astro.props;
const showHomeLink = ["/", "/services", "/ressources", "/contact"].includes(pathname);
---

<header class="site-header">
  <div class="navbar-container">
    <div class="navbar">
      {showHomeLink ? (
        <a href="/" id="site-logo-toggle" class="site-logo-link" aria-label="Accueil">
          <Icon size="lg" color="light" class="site-logo" style="flex-shrink: 0;" />
        </a>
      ) : (
        <Icon id="site-logo-toggle" size="lg" color="light" class="site-logo" style="flex-shrink: 0;" />
      )}
    <button
        id="menu-toggle"
        class="menu-toggle-btn"
        type="button"
        >
        <span class="burger-icon" aria-hidden="true">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </span>
        <span id="menu-toggle-text" class="menu-toggle-text">Menu</span>
      </button>
    </div>
    <nav 
        id="navbar-nav" 
        class={`navbar-nav${showHomeLink ? ' show-home-link' : ''}`}
        style="display: none;">
      <div class="nav-content">
        <!-- Section des liens principaux - 50% -->
        <div class="nav-links-section">
          <a href="/services" class="nav-link">Services</a>
          <a href="/ressources" class="nav-link">Ressources</a>
          <a href="/contact" class="nav-link">Contact</a>
          <a href="/design-system" class="nav-link">Design System</a>
        </div>
        
        <!-- Section audit flash - 50% -->
        <div class="audit-flash-section">
          <div class="audit-flash-content">
            <h3 class="audit-flash-title">L'audit flash</h3>
            <p class="audit-flash-subtitle">Un point de départ</p>
            <p class="audit-flash-description">
              Un diagnostic rapide et concret de votre site ou application :
            </p>
            <ul class="audit-flash-list">
              <li>Chiffres clés : performance, impact carbone, accessibilité</li>
              <li>Points bloquants et recommandations immédiates</li>
              <li>Aperçu clair pour engager une transition responsable</li>
            </ul>
            <a href="/exemple-audit-gratuit.pdf" class="audit-flash-download" download>
              Télécharger un exemple d'audit flash
            </a>
          </div>
          <button class="nav-link nav-link-button nav-link-modal" type="button">Demander un audit flash</button>
        </div>
      </div>
    </nav>
  </div>
</header>

<!-- Modale Audit flash -->
<div id="audit-flash-modal" class="audit-flash-modal" style="display:none;">
  <div class="audit-flash-content">
    <h2>Audit flash</h2>
    <p>Votre audit numérique express commence ici.</p>
    <button id="close-audit-flash" class="close-btn">Fermer</button>
  </div>
</div>

<script>
  // Audit flash modal
  const btn = document.getElementById('audit-flash-btn');
  const modal = document.getElementById('audit-flash-modal');
  const closeBtn = document.getElementById('close-audit-flash');

  btn?.addEventListener('click', () => {
    if (modal) {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
  });

  closeBtn?.addEventListener('click', () => {
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = '';
    }
  });

  window.addEventListener('keydown', (e) => {
    if (modal && modal.style.display === 'flex' && e.key === 'Escape') {
      modal.style.display = 'none';
      document.body.style.overflow = '';
    }
  });

  // Menu toggle avec gestion du survol
  const toggleBtn = document.getElementById('menu-toggle');
  const navbarNav = document.getElementById('navbar-nav');
  const toggleText = document.getElementById('menu-toggle-text');
  const iconNav = document.getElementById('site-logo-toggle');

  function updateToggle() {
    if (navbarNav && toggleText) {
      if (navbarNav.classList.contains('menu-open')) {
        toggleText.textContent = 'Fermer';
      } else {
        toggleText.textContent = 'Menu';
      }
    }
  }

  function setIconColor(color: string) {
    if (iconNav) {
      const iconPath = iconNav.querySelector('path');
      if (iconPath) {
        if (color === 'secondary') {
          iconPath.style.fill = 'var(--color-secondary)';
        } else {
          iconPath.style.fill = 'var(--color-neutral-lighter)';
        }
      }
    }
  }

  // Gestion du survol du bouton
  toggleBtn?.addEventListener('mouseenter', () => {
    if (navbarNav && !navbarNav.classList.contains('menu-open')) {
      setIconColor('secondary');
    }
  });

  toggleBtn?.addEventListener('mouseleave', () => {
    if (navbarNav && !navbarNav.classList.contains('menu-open')) {
      setIconColor('light');
    }
  });

  function animateMenuOpen() {
    if (!navbarNav) return;
    
    const menuItems = navbarNav.querySelectorAll('.nav-link, .audit-flash-section');
    navbarNav.style.display = 'flex';
    navbarNav.classList.add('menu-open');
    
    // Changer la couleur de l'icône immédiatement
    setIconColor('secondary');
    
    // Animer chaque élément séquentiellement
    menuItems.forEach((item, index) => {
      const htmlItem = item as HTMLElement;
      // Reset initial
      htmlItem.style.opacity = '0';
      htmlItem.style.transform = 'translateY(30px)';
      htmlItem.style.transition = 'opacity 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
      
      // Animer avec délai
      setTimeout(() => {
        htmlItem.style.opacity = '1';
        htmlItem.style.transform = 'translateY(0)';
      }, (index + 1) * 150); // 150ms de délai entre chaque
    });
  }

  function animateMenuClose() {
    if (!navbarNav) return;
    
    const menuItems = navbarNav.querySelectorAll('.nav-link, .audit-flash-section');
    navbarNav.classList.remove('menu-open');
    
    // Remettre la couleur par défaut de l'icône
    setIconColor('light');
    
    // Fermer tous les éléments rapidement
    menuItems.forEach((item) => {
      const htmlItem = item as HTMLElement;
      htmlItem.style.transition = 'opacity 0.3s ease-out, transform 0.3s ease-out';
      htmlItem.style.opacity = '0';
      htmlItem.style.transform = 'translateY(-20px)';
    });
    
    // Cacher le menu après l'animation
    setTimeout(() => {
      navbarNav.style.display = 'none';
    }, 400);
  }

  toggleBtn?.addEventListener('click', () => {
    if (navbarNav && iconNav && toggleBtn) {
        const isOpen = navbarNav.classList.contains('menu-open');
        
        if (isOpen) {
          animateMenuClose();
        } else {
          animateMenuOpen();
        }
        
        updateToggle();
        toggleBtn.classList.toggle('open', !isOpen);
    }
  });

  navbarNav?.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', () => {
      if (navbarNav && iconNav && toggleBtn) {
        animateMenuClose();
        
        updateToggle();
        toggleBtn.classList.remove('open');
      }
    });
  });
</script>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: var(--z-navbar);
    padding: var(--space-lg);
    background: var(--color-primary);
  }

  .site-logo-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    z-index: 100;
  }

  .navbar {
    position: relative;
    display: flex;
    align-items: flex-start;
    width: 100%;
    max-width: var(--container-xl);
    margin: 0 auto;
  }

  /* Transition fluide pour l'icône */
  .site-logo path,
  #site-logo-toggle path {
    transition: fill 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .menu-toggle-btn {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    position: absolute;
    top: 19px;
    right: 6px;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-lighter);
    border: none;
    cursor: pointer;
    padding: calc(var(--space-xs) * 2) 0 calc(var(--space-xs) * 2) var(--space-md);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    z-index: 100;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    background: transparent;
    color: var(--color-neutral-lighter);
  }

  .menu-toggle-btn:hover {
    color: var(--color-secondary);
    transition: all 0.3s;
  }

  .menu-toggle-btn .burger-icon {
    display: inline-block;
    width: 16px;
    height: 16px;
    position: relative;
    margin-right: var(--space-xs);
    margin-top: -6px;
    transition: all 0.3s;
  }

  .menu-toggle-btn .bar {
    display: block;
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    transition: all 0.3s;
  }

  .menu-toggle-btn .bar:nth-child(1) {
    top: 4px;
  }
  .menu-toggle-btn .bar:nth-child(2) {
    top: 10px;
  }
  .menu-toggle-btn .bar:nth-child(3) {
    top: 16px;
  }

  /* Animation croix quand menu ouvert */
  .menu-toggle-btn.open {
    color: var(--color-secondary);
  }

  .menu-toggle-btn.open .bar {
    color: var(--color-secondary);
  }

  .menu-toggle-btn.open .burger-icon .bar:nth-child(1) {
    top: 10px;
    transform: rotate(45deg);
  }
  .menu-toggle-btn.open .burger-icon .bar:nth-child(2) {
    opacity: 0;
  }
  .menu-toggle-btn.open .burger-icon .bar:nth-child(3) {
    top: 10px;
    transform: rotate(-45deg);
  }

  .navbar-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100svh;
    min-height: 100svh;
    background: linear-gradient(
      to bottom,
      var(--color-neutral-lighter) 50%,
      var(--color-primary) 50%
    );
    z-index: 50;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .navbar-nav.menu-open {
    display: flex !important;
  }

  /* Conteneur pour organiser le contenu - RÉPARTITION 50/50 */
  .nav-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 100svh;
    padding: 0 var(--space-lg);
  }

  /* Section des liens principaux - 50% de l'espace */
  .nav-links-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: end;
    align-items: flex-start;
    min-height: 50svh;
    padding: var(--space-xl) 0;
  }

  /* Section audit flash - 50% de l'espace */
  .audit-flash-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 50svh;
    padding: var(--space-xl) 0;
    margin: 0 var(--space-sm);
    
    /* État initial - invisible comme les autres éléments */
    opacity: 0;
    transform: translateY(30px);
  }

  .nav-link {
    color: var(--color-neutral-lighter);
    background-color: transparent;
    text-decoration: none;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-lighter);
    letter-spacing: var(--letter-spacing-wide);
    text-transform: uppercase;
    text-align: left;
    padding: var(--space-sm) var(--space-md);
    border: none;
    cursor: pointer;
    
    /* État initial - invisible */
    opacity: 0;
    transform: translateY(30px);
    
    /* Transition au survol pour les couleurs */
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-secondary);
  }

  .nav-link-home {
    position: absolute;
    top: 20px;
    left: 72px;
  }

  .audit-flash-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: var(--space-lg);
  }

  .audit-flash-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-xs);
    text-transform: none;
    letter-spacing: normal;
  }

  .audit-flash-subtitle {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-light);
    color: var(--color-neutral-light);
    margin-bottom: var(--space-md);
    font-style: italic;
  }

  .audit-flash-description {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-relaxed);
  }

  .audit-flash-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-lg) 0;
  }

  .audit-flash-list li {
    font-size: var(--font-size-sm);
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-sm);
    padding-left: var(--space-md);
    position: relative;
    line-height: var(--line-height-normal);
  }

  .audit-flash-list li::before {
    content: "•";
    color: var(--color-secondary);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .audit-flash-download {
    display: inline-block;
    font-size: var(--font-size-sm);
    color: var(--color-secondary);
    text-decoration: underline;
    transition: color 0.3s ease;
    font-weight: var(--font-weight-medium);
  }

  .audit-flash-download:hover {
    color: var(--color-secondary-dark);
  }

  .nav-link-modal {
    background-color: var(--color-secondary);
    border: 1px solid var(--color-secondary);
    color: var(--color-neutral-lighter) !important;
    transition: background-color 0.3s ease, color 0.3s ease;
    margin: 0;
    padding: var(--space-md) var(--space-lg);
    width: 100%;
    text-align: center;
    text-transform: none;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
  }

  .nav-link-modal:hover {
    background-color: var(--color-secondary-dark);
    color: var(--color-neutral-lighter) !important;
  }
  
  /* Styles pour les pages avec home link */
  .navbar-nav.show-home-link .nav-link,
  .navbar-nav.show-home-link .nav-link-button {
    color: var(--color-secondary);
  }

  .navbar-nav.show-home-link .nav-link:hover,
  .navbar-nav.show-home-link .nav-link-button:hover {
    color: var(--color-neutral-lighter);
  }

  .navbar-nav.show-home-link .audit-flash-title,
  .navbar-nav.show-home-link .audit-flash-subtitle,
  .navbar-nav.show-home-link .audit-flash-description,
  .navbar-nav.show-home-link .audit-flash-list li {
    color: var(--color-neutral-lighter);
  }

  /* RESPONSIVE ADAPTATIF */

  /* Écrans moyens (tablettes) */
  @media (max-width: 1024px) {
    .nav-links-section {
      padding: var(--space-lg) 0;
      min-height: 50svh;
    }

    .audit-flash-section {
      padding: var(--space-lg) 0;
      min-height: 50svh;
    }

    .nav-link {
      font-size: var(--font-size-md);
      padding: var(--space-xs) var(--space-sm);
    }

    .audit-flash-title {
      font-size: var(--font-size-lg);
    }

    .audit-flash-subtitle {
      font-size: var(--font-size-sm);
    }
  }

  /* Écrans moyens à petits */
  @media (max-width: 768px) {
    .nav-content {
      padding: 0 var(--space-md);
      min-height: 100svh;
    }

    .nav-links-section {
      min-height: 50svh;
    }

    .audit-flash-section {
      min-height: 50svh;
    }

    .nav-link {
      font-size: var(--font-size-sm);
      margin: var(--space-xs) 0;
    }

    .audit-flash-title {
      font-size: var(--font-size-md);
    }

    .audit-flash-description,
    .audit-flash-list li {
      font-size: var(--font-size-xs);
    }
  }

  /* Petits écrans (mobiles) - optimisation hauteur */
  @media (max-height: 667px) {
    .navbar-nav {
      height: 100svh;
      min-height: 100svh;
    }

    .nav-content {
      min-height: 100svh;
    }

    .nav-links-section {
      padding: var(--space-md) 0;
      min-height: 45svh;
      flex-shrink: 0;
    }

    .audit-flash-section {
      padding: var(--space-sm) 0;
      min-height: 45svh;
      flex-shrink: 0;
    }

    .nav-link {
      font-size: var(--font-size-sm);
      margin: 2px 0;
      padding: var(--space-xs) var(--space-sm);
    }

    .audit-flash-title {
      font-size: var(--font-size-sm);
      margin-bottom: 4px;
    }

    .audit-flash-subtitle {
      font-size: var(--font-size-xs);
      margin-bottom: var(--space-sm);
    }

    .audit-flash-description,
    .audit-flash-list li,
    .audit-flash-download {
      font-size: var(--font-size-xs);
    }

    .audit-flash-list li {
      margin-bottom: 4px;
    }

    .audit-flash-content {
      margin-bottom: var(--space-sm);
    }

    .nav-link-modal {
      padding: var(--space-sm) var(--space-md);
      font-size: var(--font-size-sm);
    }
  }

  /* Très petits écrans - MODE ADAPTABLE */
  @media (max-height: 568px) {
    .nav-content {
      /* Passer en mode auto pour permettre le scroll */
      min-height: auto;
      height: auto;
    }

    .nav-links-section {
      /* Ne plus forcer 50% mais s'adapter au contenu */
      flex: 0 0 auto;
      min-height: auto;
      padding: var(--space-md) 0 var(--space-sm) 0;
    }

    .audit-flash-section {
      /* Ne plus forcer 50% mais s'adapter au contenu */
      flex: 0 0 auto;
      min-height: auto;
      padding: var(--space-sm) 0 var(--space-lg) 0;
    }

    .nav-link {
      font-size: var(--font-size-xs);
      margin: 1px 0;
      padding: 2px var(--space-xs);
    }

    .audit-flash-title {
      font-size: var(--font-size-xs);
      margin-bottom: 2px;
    }

    .audit-flash-subtitle {
      font-size: 10px;
      margin-bottom: var(--space-xs);
    }

    .audit-flash-description,
    .audit-flash-list li {
      font-size: 10px;
      line-height: 1.3;
    }

    .audit-flash-list {
      margin-bottom: var(--space-sm);
    }

    .audit-flash-list li {
      margin-bottom: 2px;
    }

    .nav-link-modal {
      padding: var(--space-xs) var(--space-sm);
      font-size: var(--font-size-xs);
    }
  }

  @media (max-width: 640px) {
    .menu-toggle-text {
      display: none;
    }

    .site-header {
      padding: var(--space-md);
    }

    .nav-content {
      padding: 0 calc(var(--space-md) * 1.5);
    }
  }

  /* iPhone et petits écrans spécifiques */
  @media (max-width: 414px) and (max-height: 896px) {
    .navbar-nav {
      height: 100svh;
      min-height: 100svh;
    }

    .nav-content {
      min-height: 100svh;
    }

    .nav-links-section {
      min-height: 48svh;
    }

    .audit-flash-section {
      min-height: 48svh;
    }
  }

  @media (max-width: 375px) and (max-height: 667px) {
    .nav-content {
      min-height: 100svh;
    }

    .nav-links-section {
      min-height: 45svh;
    }

    .audit-flash-section {
      min-height: 45svh;
    }
  }

  /* Gestion spéciale pour les très petits écrans en hauteur */
  @media (max-height: 500px) {
    .navbar-nav {
      height: 100svh;
      overflow-y: scroll;
    }

    .nav-content {
      min-height: 100svh;
      height: auto;
    }

    .nav-links-section {
      flex: 0 0 auto;
      min-height: auto;
    }

    .audit-flash-section {
      flex: 0 0 auto;
      min-height: auto;
      padding: var(--space-md) 0 var(--space-xl) 0;
    }

    .nav-link-home {
      position: relative;
      top: auto;
      left: auto;
    }
  }
</style>