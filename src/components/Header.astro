---
// Header.astro - MOBILE FIRST ONLY
import Icon from './Icon.astro';

export interface Props {
  pathname?: string;
}

const { pathname = "/" } = Astro.props;
const isHomePage = pathname === "/";
const showHomeLink = !isHomePage;
---

<header class="site-header">
  <div class="navbar-container">
    <div class="navbar">
      {showHomeLink ? (
        <a href="/" id="site-logo-toggle" class="site-logo-link" aria-label="Retour √† l'accueil">
          <Icon size="sm" color="light" class="site-logo" />
          <span class="logo-text">TERRE DIGITALE</span>
        </a>
      ) : (
        <div id="site-logo-toggle" class="site-logo-container">
          <Icon size="sm" color="light" class="site-logo" />
          <span class="logo-text">TERRE DIGITALE</span>
        </div>
      )}
    
      <button
        id="menu-toggle"
        class="menu-toggle-btn"
        type="button"
        aria-label="Menu principal"
      >
        <span class="burger-icon" aria-hidden="true">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </span>
      </button>
    </div>
    
    <nav 
      id="navbar-nav" 
      class="navbar-nav"
      style="display: none;"
    >
      <div class="nav-content">
        <div class="nav-links-section">
          <a href="/services" class="nav-link">Services</a>
          <a href="/ressources" class="nav-link">Ressources</a>
          <a href="/contact" class="nav-link">Contact</a>
          <a href="/design-system" class="nav-link">Design System</a>
        </div>
        
        <div class="audit-flash-section">
          <div class="audit-flash-content">
            <p class="audit-flash-tagline">Nos trois engagements</p>
            <ul class="audit-flash-list">
              <li>üå± Inclusion et ouverture</li>
              <li>‚ö° Sobri√©t√© et performance</li>
              <li>üåç Durabilit√© et agilit√©</li>
            </ul>
            <a href="/exemple-audit-gratuit.pdf" class="audit-flash-download" download>
              T√©l√©charger un exemple d'audit flash
            </a>
          </div>
          <button class="nav-link nav-link-button nav-link-modal" type="button">
            Demander un audit flash
          </button>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  const toggleBtn = document.getElementById('menu-toggle');
  const navbarNav = document.getElementById('navbar-nav');
  const logoContainer = document.getElementById('site-logo-toggle');

  function setLogoColor(color: string): void {
    if (logoContainer) {
      const iconPath = logoContainer.querySelector('path') as SVGPathElement | null;
      const logoText = logoContainer.querySelector('.logo-text') as HTMLElement | null;
      if (iconPath) {
        iconPath.style.fill = color === 'secondary' ? 
          'var(--color-secondary)' : 'var(--color-neutral-lighter)';
      }
      if (logoText) {
        logoText.style.color = color === 'secondary' ? 
          'var(--color-secondary)' : 'var(--color-neutral-lighter)';
      }
    }
  }

  function animateMenuOpen(): void {
    if (!navbarNav) return;
    
    const menuItems = navbarNav.querySelectorAll('.nav-link, .audit-flash-section');
    navbarNav.style.display = 'flex';
    navbarNav.classList.add('menu-open');
    
    setLogoColor('secondary');
    
    menuItems.forEach((item, index) => {
      const htmlItem = item as HTMLElement;
      htmlItem.style.opacity = '0';
      htmlItem.style.transform = 'translateY(30px)';
      htmlItem.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
      
      setTimeout(() => {
        htmlItem.style.opacity = '1';
        htmlItem.style.transform = 'translateY(0)';
      }, (index + 1) * 150);
    });
  }

  function animateMenuClose(): void {
    if (!navbarNav) return;
    
    const menuItems = navbarNav.querySelectorAll('.nav-link, .audit-flash-section');
    navbarNav.classList.remove('menu-open');
    
    setLogoColor('light');
    
    menuItems.forEach((item) => {
      const htmlItem = item as HTMLElement;
      htmlItem.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      htmlItem.style.opacity = '0';
      htmlItem.style.transform = 'translateY(-20px)';
    });
    
    setTimeout(() => {
      navbarNav.style.display = 'none';
    }, 400);
  }

  toggleBtn?.addEventListener('click', () => {
    if (navbarNav && logoContainer && toggleBtn) {
      const isOpen = navbarNav.classList.contains('menu-open');
      
      if (isOpen) {
        animateMenuClose();
      } else {
        animateMenuOpen();
      }
      
      toggleBtn.classList.toggle('open', !isOpen);
    }
  });

  navbarNav?.querySelectorAll('.nav-link').forEach(link => {
    link.addEventListener('click', () => {
      if (navbarNav && logoContainer && toggleBtn) {
        animateMenuClose();
        toggleBtn.classList.remove('open');
      }
    });
  });
</script>

<style>
  /* ================================
   * HEADER - MOBILE FIRST ONLY
   * ================================ */
  
  .site-header {
    position: fixed;
    left: 0;
    right: 0;
    z-index: 100;
    z-index: var(--z-navbar);
    padding: var(--space-md);
    background-color: var(--color-primary);
  }

  .navbar-container {
    width: 100%;
  }

  .navbar {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  /* ================================
   * LOGO - MOBILE OPTIMIZED
   * ================================ */

  .site-logo-link,
  .site-logo-container {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    z-index: 100;
  }

  .site-logo-link {
    transition: var(--transition-all);
  }

  .logo-text {
    font-family: var(--font-family-primary);
    font-weight: var(--font-weight-regular);
    text-transform: uppercase;
    letter-spacing: var(--logo-text-spacing);
    line-height: 1;
    white-space: nowrap;
    color: var(--color-neutral-lighter);
    font-size: var(--font-size-xs);
    transition: var(--transition-colors);
    margin: 0;
  }

  /* Transition pour l'ic√¥ne et le texte */
  .site-logo path,
  #site-logo-toggle path,
  .logo-text {
    transition: var(--transition-colors);
  }

  /* ================================
   * MENU TOGGLE - MOBILE
   * ================================ */
  
  .menu-toggle-btn {
    display: none;
    align-items: center;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
    background-color: transparent;
    color: var(--color-neutral-lighter);
    z-index: 100;
    min-height: 44px;
    min-width: 44px;
  }


  .burger-icon {
    display: inline-block;
    width: 20px;
    height: 16px;
    position: relative;
    transition: var(--transition-all);
  }

  .bar {
    display: block;
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-neutral-lighter);
    transition: var(--transition-all);
  }

  .bar:nth-child(1) { top: 0; }
  .bar:nth-child(2) { top: 7px; }
  .bar:nth-child(3) { top: 14px; }

  /* Animation croix quand menu ouvert */
  .menu-toggle-btn.open .bar:nth-child(1) {
    top: 7px;
    transform: rotate(45deg);
  }
  .menu-toggle-btn.open .bar:nth-child(2) {
    opacity: 0;
  }
  .menu-toggle-btn.open .bar:nth-child(3) {
    top: 7px;
    transform: rotate(-45deg);
  }

  /* ================================
   * NAVIGATION OVERLAY - MOBILE FULLSCREEN
   * ================================ */

  .navbar-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(
      to bottom,
      var(--color-secondary) 50%,
      var(--color-primary) 50%
    );
    z-index: 50;
    overflow-y: auto;
  }

  .navbar-nav.menu-open {
    display: flex !important;
  }

  .nav-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100vh;
    padding: 0 var(--space-md);
  }

  /* ================================
   * NAVIGATION SECTIONS - 50/50 SPLIT
   * ================================ */

  .nav-links-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: end;
    align-items: flex-start;
    padding: var(--space-xl) 0;
  }

  .audit-flash-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--space-md) 0;
    opacity: 0;
    transform: translateY(30px);
  }

  /* ================================
   * NAVIGATION LINKS
   * ================================ */

  .nav-link {
    display: block;
    width: 100%;
    color: var(--color-neutral-lighter);
    text-decoration: none;
    font-family: var(--font-family-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-light);
    margin-bottom: var(--space-sm);
    line-height: var(--line-height-normal);
    text-align: left;
    cursor: pointer;
    opacity: 0;
    transform: translateY(30px);
    transition: var(--transition-colors);
    min-height: 44px;
    display: flex;
    align-items: center;
  }

  /* ================================
   * AUDIT FLASH SECTION
   * ================================ */

  .audit-flash-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: start;
  }

  .audit-flash-tagline {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-secondary);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-normal);
    text-align: left;
    margin-top: var(--space-lg);
  }

  .audit-flash-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-md) 0;
  }

  .audit-flash-list li {
    font-size: var(--font-size-base);
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-sm);
    line-height: var(--line-height-normal);
  }

  .audit-flash-download {
    display: inline-block;
    font-size: var(--font-size-base);
    color: var(--color-secondary);
    text-decoration: underline;
    transition: var(--transition-colors);
    font-weight: var(--font-weight-medium);
    min-height: 44px;
    display: flex;
    align-items: center;
  }

  .nav-link-modal {
    border: 1px solid var(--color-secondary);
    padding: var(--space-sm) var(--space-lg);
    width: 100%;
    text-align: center;
    text-transform: none;
    font-family: var(--font-family-primary);
    letter-spacing: 0.05em;
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-bold);
    color: var(--color-neutral-lighter) !important;
    line-height: var(--line-height-normal);
    justify-content: center;
  }

  /* ================================
   * RESPONSIVE - TR√àS PETITS √âCRANS
   * ================================ */

  @media (max-width: 320px) {
    .site-header {
      padding: var(--space-sm);
    }

    .nav-content {
      padding: 0 var(--space-sm);
    }

    .logo-text {
      font-size: 10px;
    }

    .audit-flash-tagline {
      font-size: var(--font-size-base);
    }

    .nav-link {
      font-size: var(--font-size-sm);
    }
  }

  /* Hauteur viewport r√©duite */
  @media (max-height: 600px) {
    .nav-content {
      height: auto;
      min-height: 100vh;
    }

    .nav-links-section {
      flex: 0 0 auto;
      min-height: auto;
      padding: var(--space-md) 0 var(--space-sm) 0;
    }

    .audit-flash-section {
      flex: 0 0 auto;
      min-height: auto;
      padding: var(--space-sm) 0 var(--space-lg) 0;
    }

    .audit-flash-tagline {
      font-size: var(--font-size-base);
      margin-bottom: var(--space-sm);
    }

    .audit-flash-list li {
      font-size: var(--font-size-sm);
      margin-bottom: var(--space-xs);
    }

    .nav-link-modal {
      padding: var(--space-sm) var(--space-md);
      font-size: var(--font-size-sm);
    }
  }
</style>