---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Accueil - Terre Digitale"
  description="Pour un numérique inclusif <br>et durable"
>
  <div class="hero-container">
    <div class="hero-content">
      <h2 class="hero-title" id="hero-animated"></h2>
    </div>
  </div>

  <!-- Section Trois Piliers -->
  <section class="pillars-section">
    <div class="pillars-container">
      <div class="pillars-grid">
        <div class="pillar-card">
          <h3 class="pillar-name">Inclusion et ouverture</h3>
          <p class="pillar-description">
            Rendez vos services accessibles et élargissez votre audience.
          </p>
        </div>
        
        <div class="pillar-card">
          <h3 class="pillar-name">Sobriété et performance</h3>
          <p class="pillar-description">
            Réduisez l'empreinte carbone de vos sites tout en améliorant leur rapidité.
          </p>
        </div>
        
        <div class="pillar-card">
          <h3 class="pillar-name">Durabilité et agilité</h3>
          <p class="pillar-description">
            Construisez des bases solides, faciles à maintenir et à faire évoluer.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const heroText = "Faire germer un numérique inclusif et durable";
  const target = document.getElementById('hero-animated');
  function showWords(line: string, container: HTMLElement) {
    if (!container) return;
    container.innerHTML = '';
    const words = line.split(' ');
    let delay = 100;
    words.forEach((word) => {
      const span = document.createElement('span');
      span.className = 'hero-word';
      if (word === 'numérique' || word === 'inclusif' || word === 'durable') {
        span.style.letterSpacing = '0.18em';
        span.style.color = 'var(--color-secondary)';
      }
  span.textContent = word;
      span.style.opacity = '0';
      span.style.transition = 'opacity 0.5s';
      container.appendChild(span);
      setTimeout(() => {
        span.style.opacity = '1';
      }, delay);
      delay += 80 + word.length * 30;
    });
  }
  window.addEventListener('DOMContentLoaded', () => {
    if (target) {
      showWords(heroText, target);
    }
  });
</script>

<style>
  /* Background global de la page - SUPPRIMÉ car seul le body garde les background-color */
  :global(body) {
    background-color: var(--color-primary) !important;
  }

  /* Hero container prend toute la hauteur disponible */
  .hero-container {
    min-height: calc(100vh - 110px);
    display: flex;
    align-items: flex-start;
    justify-content: start;
    width: 100%;
  }

  .hero-content {
    width: 100%;
    max-width: 800px;
    margin-bottom: var(--space-4xl);
  }

  .hero-title {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-light);
    line-height: var(--line-height-relaxed);
    letter-spacing: 1px;
    text-align: left;
    color: var(--color-neutral-lighter);
    margin: 0;
  }

  .hero-word {
    display: inline-block;
    opacity: 0;
    transition: opacity 0.5s;
    margin-right: 0.35em;
  }


  .pillars-section {
    width: 100%;
    margin: var(--space-2xl) 0;
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-2xl);
    align-items: start;
  }

  .pillar-card {
    padding: calc(var(--space-md) * 2);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    transition: var(--transition-card);
    box-shadow: var(--shadow-card);
    background-color: var(--color-primary-dark);
    border-radius: 16px;
  }

  .pillar-card:hover {
    box-shadow: var(--shadow-card-hover);
    transform: translateY(-2px);
  }

  .pillar-name {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-snug);
  }

  .pillar-description {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-regular);
    line-height: var(--line-height-relaxed);
    color: var(--color-neutral-light);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-container {
      min-height: calc(100vh - 100px);
    }

    .hero-content {
      margin-bottom: var(--space-3xl);
    }

    .hero-statement {
      font-size: var(--font-size-2xl);
      line-height: var(--line-height-normal);
    }

    .pillars-container {
      padding: 0 !important;
    }

    .pillars-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
  }

  @media (max-width: 640px) {

    .hero-content {
      margin-bottom: var(--space-md);
    }

    .hero-statement {
      font-size: var(--font-size-xl);
    }

  }

  /* Très petits écrans */
  @media (max-width: 375px) {
    .hero-statement {
      font-size: var(--font-size-lg);
    }
  }
</style>