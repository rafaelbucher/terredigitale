---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Accueil - Terre Digitale"
  description="Nous croyons en un numérique qui allie performance, responsabilité et accessibilité. Avec Terre Digitale, transformez vos produits en leviers de changement positif."
>
  <div class="hero-container">
    <div class="hero-content">
      <p class="hero-statement" id="hero-animated"></p>
    </div>
  </div>

  <!-- Section Trois Piliers -->
  <section class="pillars-section">
    <div class="pillars-container">
      <div class="pillars-grid">
        <div class="pillar-card">
          <h3 class="pillar-name">Inclusion et ouverture</h3>
          <p class="pillar-description">
            Rendez vos services accessibles et élargissez votre audience.
          </p>
        </div>
        
        <div class="pillar-card">
          <h3 class="pillar-name">Sobriété et performance</h3>
          <p class="pillar-description">
            Réduisez l'empreinte carbone de vos sites tout en améliorant leur rapidité.
          </p>
        </div>
        
        <div class="pillar-card">
          <h3 class="pillar-name">Durabilité et agilité</h3>
          <p class="pillar-description">
            Construisez des bases solides, faciles à maintenir et à faire évoluer.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
const lines = [
  "Nous croyons en un numérique qui allie performance, responsabilité et accessibilité.",
  "Avec TERRE DIGITALE, transformez vos produits en leviers de changement positif."
];
const target = document.getElementById('hero-animated');
let idx = 0;
function showWords(line: string, container: HTMLElement) {
  if (!container) return;
  container.innerHTML = '';
  const words = line.split(' ');
  let delay = 100;
  /** @type {string} */
  words.forEach((word: string) => {
    const span = document.createElement('span');
    if (word === 'TERRE' || word === 'DIGITALE') {
      span.className = 'hero-word hero-md';
    } else {
      span.className = 'hero-word';
    }
    span.textContent = word + ' ';
    span.style.opacity = '0';
    span.style.transition = 'opacity 0.5s';
    container.appendChild(span);
    setTimeout(() => {
      span.style.opacity = '1';
    }, delay);
    // Augmente le délai en fonction de la longueur du mot
    delay += 80 + word.length * 30;
  });
}
function animateLines() {
  if (!target) return;
  target.innerHTML = '';
  // Anime tous les mots des deux phrases en une seule séquence
  showWords(lines.join(' '), target);
}
window.addEventListener('DOMContentLoaded', animateLines);
</script>

<style>
  /* Background global de la page - SUPPRIMÉ car seul le body garde les background-color */
  :global(body) {
    background-color: var(--color-primary) !important;
  }

  /* Hero container prend toute la hauteur disponible */
  .hero-container {
    min-height: calc(100vh - 110px);
    display: flex;
    align-items: flex-end;
    justify-content: start;
    width: 100%;
  }

  .hero-content {
    width: 100%;
    max-width: 800px;
    margin-bottom: var(--space-4xl);
  }

  .hero-statement {
  font-family: var(--font-family-primary);
  font-size: var(--font-size-2xl);
  font-style: normal;
  font-weight: var(--font-weight-lighter);
  line-height: var(--line-height-tight);
  letter-spacing: .015em;
  color: var(--color-neutral-lighter);
  margin: 0;
}

.hero-md {
  font-size: var(--font-size-md) !important;
  font-weight: var(--font-weight-bold);
  letter-spacing: 0.18em;
  color: var(--color-secondary);
}
  }

  .hero-word {
    display: inline-block;
    opacity: 0;
    transition: opacity 0.5s;
  }


  .pillars-section {
    width: 100%;
    margin: var(--space-2xl) 0;
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-2xl);
    align-items: start;
  }

  .pillar-card {
    padding: calc(var(--space-md) * 2);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    transition: var(--transition-card);
    box-shadow: var(--shadow-card);
    background-color: var(--color-primary-dark);
    border-radius: 16px;
  }

  .pillar-card:hover {
    box-shadow: var(--shadow-card-hover);
    transform: translateY(-2px);
  }

  .pillar-name {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-neutral-lighter);
    margin-bottom: var(--space-md);
    line-height: var(--line-height-snug);
  }

  .pillar-description {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-regular);
    line-height: var(--line-height-relaxed);
    color: var(--color-neutral-light);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-container {
      min-height: calc(100vh - 100px);
    }

    .hero-content {
      margin-bottom: var(--space-3xl);
    }

    .hero-statement {
      font-size: var(--font-size-2xl);
      line-height: var(--line-height-normal);
    }

    .pillars-container {
      padding: 0 !important;
    }

    .pillars-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
  }

  @media (max-width: 640px) {

    .hero-content {
      margin-bottom: var(--space-md);
    }

    .hero-statement {
      font-size: var(--font-size-xl);
    }

  }

  /* Très petits écrans */
  @media (max-width: 375px) {
    .hero-statement {
      font-size: var(--font-size-lg);
    }
  }
</style>