---
// src/pages/design-system.astro
import MinimalLayout from '../layouts/MinimalLayout.astro';
import Logo from '../components/Logo.astro';
---

<MinimalLayout
  title="Design System - Mon Site Astro"
  description="Documentation complète du système de design avec tokens, couleurs, typographie et composants"
>
  <div class="container">
    <section class="section">
      <h1>Design System</h1>
      <p class="intro-text">
        Documentation complète de notre système de design basé sur des tokens CSS.
      </p>
    </section>
    
    <!-- Logo Section -->
    <section class="section">
      <h2>Logo</h2>
      <p>Le logo Terre Digitale est disponible en différentes tailles et variantes.</p>
      
      <!-- Tailles du logo -->
      <div class="subsection">
        <h3>Tailles</h3>
        <div class="logo-sizes-demo">
          <div class="logo-size-item">
            <Logo size="xs" variant="primary" />
            <code>xs (24px)</code>
          </div>
          <div class="logo-size-item">
            <Logo size="sm" variant="primary" />
            <code>sm (32px)</code>
          </div>
          <div class="logo-size-item">
            <Logo size="md" variant="primary" />
            <code>md (48px)</code>
          </div>
          <div class="logo-size-item">
            <Logo size="lg" variant="primary" />
            <code>lg (64px)</code>
          </div>
          <div class="logo-size-item">
            <Logo size="xl" variant="primary" />
            <code>xl (96px)</code>
          </div>
        </div>
      </div>
      
      <!-- Variantes de couleur -->
      <div class="subsection">
        <h3>Variantes de couleur</h3>
        <div class="logo-variants-demo">
          <div class="logo-variant-item">
            <Logo size="md" variant="primary" />
            <code>primary</code>
          </div>
          <div class="logo-variant-item bg-dark">
            <Logo size="md" variant="light" />
            <code>light</code>
          </div>
          <div class="logo-variant-item">
            <Logo size="md" variant="secondary" />
            <code>secondary</code>
          </div>
          <div class="logo-variant-item">
            <Logo size="md" variant="highlight" />
            <code>highlight</code>
          </div>
        </div>
      </div>
      
      <!-- Usage interactif -->
      <div class="subsection">
        <h3>Usage interactif</h3>
        <div class="logo-interactive-demo">
          <Logo 
            size="xl" 
            variant="primary" 
            href="/" 
            interactive={true}
            class="demo-interactive-logo"
          />
          <p><small>Survolez le logo pour voir l'effet interactif</small></p>
        </div>
      </div>
      
      <!-- Usage interactif -->
      <div class="subsection">
        <h3>Icones</h3>
        <div class="logo-variants-demo">
          <div class="logo-variant-item">
            <Logo size="lg" variant="primary" showText={false}/>
            <code>primary</code>
          </div>
          <div class="logo-variant-item bg-dark">
            <Logo size="lg" variant="light" showText={false}/>
            <code>light</code>
          </div>
          <div class="logo-variant-item">
            <Logo size="lg" variant="secondary" showText={false}/>
            <code>secondary</code>
          </div>
          <div class="logo-variant-item">
            <Logo size="lg" variant="highlight" showText={false}/>
            <code>highlight</code>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Couleurs -->
    <section class="section">
      <h2>Couleurs</h2>
      <div class="color-grid">
        <div class="color-card">
          <div class="color-swatch bg-primary"></div>
          <h4>Primaire</h4>
          <code>#1E1E1E</code>
        </div>
        <div class="color-card">
          <div class="color-swatch bg-secondary"></div>
          <h4>Secondaire</h4>
          <code>#FA6147</code>
        </div>
        <div class="color-card">
          <div class="color-swatch bg-neutral"></div>
          <h4>Neutre</h4>
          <code>#E5E5DF</code>
        </div>
        <div class="color-card">
          <div class="color-swatch bg-highlight"></div>
          <h4>Highlight</h4>
          <code>#08A890</code>
        </div>
      </div>
    </section>
    
    <!-- Typographie -->
    <section class="section">
      <h2>Typographie</h2>
      <div class="typography-demo">
        <h1>Heading 1 - Roboto Bold</h1>
        <h2>Heading 2 - Roboto Bold</h2>
        <h3>Heading 3 - Roboto Semibold</h3>
        <h4>Heading 4 - Roboto Semibold</h4>
        <h5>Heading 5 - Roboto Medium</h5>
        <h6>Heading 6 - Roboto Medium</h6>
        <p>Body text - Roboto Regular. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        <small>Caption text - Roboto Regular. Texte plus petit pour les détails.</small>
      </div>
    </section>
    
    <!-- Boutons -->
    <section class="section">
      <h2>Boutons</h2>
      <div class="button-demo">
        <button class="btn btn-primary">Bouton Primaire</button>
        <button class="btn btn-secondary">Bouton Secondaire</button>
        <button class="btn btn-highlight">Bouton Highlight</button>
      </div>
    </section>
    
    <!-- Cartes -->
    <section class="section">
      <h2>Cartes</h2>
      <div class="card-demo">
        <div class="card">
          <h3>Carte exemple</h3>
          <p>Contenu de la carte avec les styles par défaut appliqués automatiquement.</p>
          <button class="btn btn-primary">Action</button>
        </div>
      </div>
    </section>
    
    <!-- Espacements -->
    <section class="section">
      <h2>Espacements (8pt grid)</h2>
      <div class="spacing-demo">
        <div class="spacing-item" style="padding: var(--space-xs);">xs (4px)</div>
        <div class="spacing-item" style="padding: var(--space-sm);">sm (8px)</div>
        <div class="spacing-item" style="padding: var(--space-md);">md (16px)</div>
        <div class="spacing-item" style="padding: var(--space-lg);">lg (32px)</div>
        <div class="spacing-item" style="padding: var(--space-xl);">xl (48px)</div>
      </div>
    </section>
  </div>
</MinimalLayout>

<style>

  .container {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0 var(--space-md);
  }

  .intro-text {
    font-size: var(--font-size-lg);
    color: var(--color-primary-light);
    margin-bottom: var(--space-2xl);
  }

  .section {
    padding-top: 0;
  }
  
  .subsection {
    margin-bottom: var(--space-lg);
  }
  
  .subsection h3 {
    margin-bottom: var(--space-md);
    color: var(--color-primary);
    font-size: var(--font-size-lg);
  }
  
  /* Logo demos */
  .logo-sizes-demo {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
    margin-bottom: var(--space-lg);
  }
  
  .logo-size-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    border: 1px solid var(--color-neutral-dark);
    min-width: 150px;
  }
  
  .logo-size-item code {
    font-family: monospace;
    font-size: var(--font-size-xs);
    color: var(--color-primary-light);
  }
  
  .subsection h4 {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-md);
    color: var(--color-primary-light);
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-medium);
  }
  
  .logo-variants-demo {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
  }
  
  .logo-variant-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    border: 1px solid var(--color-neutral-dark);
  }
  
  .logo-variant-item.bg-dark {
    background: var(--color-primary-dark);
  }
  
  .logo-variant-item code {
    font-family: monospace;
    font-size: var(--font-size-sm);
    color: var(--color-primary-light);
  }
  
  .bg-dark code {
    color: var(--color-neutral-lighter);
  }
  
  .logo-interactive-demo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-xl);
    border: 2px dashed var(--color-highlight);
  }
  
  .demo-interactive-logo {
    cursor: pointer;
  }
  
  /* Couleurs */
  .color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
  }
  
  .color-card {
    text-align: center;
  }
  
  .color-swatch {
    width: 100%;
    height: 80px;
    margin-bottom: var(--space-md);
    border: 2px solid var(--color-neutral-dark);
  }
  
  .color-card code {
    font-family: monospace;
    padding: var(--space-xs) var(--space-sm);
    font-size: var(--font-size-sm);
  }
  
  /* Typographie */
  .typography-demo > * {
    margin-bottom: var(--space-md);
  }
  
  /* Boutons */
  .button-demo {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
  
  /* Cartes */
  .card-demo {
    max-width: 400px;
  }
  
  /* Espacements */
  .spacing-demo {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .spacing-item {
    color: white;
    font-weight: var(--font-weight-medium);
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .button-demo {
      flex-direction: column;
    }
    
    .color-grid {
      grid-template-columns: 1fr;
    }
    
    .logo-sizes-demo {
      flex-direction: column;
      align-items: center;
    }
    
    .logo-variants-demo {
      grid-template-columns: 1fr;
    }
  }